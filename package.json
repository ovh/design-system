{
  "name": "ods",
  "version": "0.0.0",
  "private": true,
  "description": "OVHcloud Design System",
  "author": "OVH SAS",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/cdk",
    "packages/cdk/dev",
    "packages/common/*",
    "packages/components",
    "packages/components/!(loader|custom-elements|custom-elements-bundle)*",
    "packages/components/!(loader|custom-elements|custom-elements-bundle)*/react",
    "packages/components/!(loader|custom-elements|custom-elements-bundle)*/vue",
    "packages/examples/*",
    "packages/shared-dependencies/*",
    "packages/storybook",
    "packages/themes/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "build:all:prod": "yarn build:prod && yarn doc && yarn doc:api && yarn build:storybook",
    "build:all:prod:slow": "yarn build:prod:slow && yarn doc && yarn doc:api:slow && yarn build:storybook",
    "build:prod": "lerna run --stream build:prod",
    "build:prod:slow": "lerna run --stream --concurrency 1 build:prod",
    "build:slow": "lerna run --concurrency 1 build",
    "build:storybook": "lerna run --stream build:storybook",
    "dev:clear:dist": "rm -rf $(find packages -type d \\( -name dist -or -name custom-elements -or -name custom-elements-bundle -or -name www -or -name docs-api -or -name loader \\) -not -path \"*/node_modules/*\"  -not -path \"*/stencil/scripts/*\" -not -path \"*/cdk/dev/scripts/*\")",
    "dev:clear:node_modules": "rm -rf $(find packages -type d -name node_modules -not -path \"packages/storybook/*\")",
    "doc": "lerna run doc",
    "doc:api": "lerna run doc:api",
    "doc:api:slow": "lerna run --concurrency 1 doc:api",
    "generate:component": "yarn workspace @ovhcloud/ods-component-generator run generate",
    "generate:licence": "npx generate-license-file --input package.json --output THIRD-PARTY-LICENCES --overwrite && lerna run generate:licence",
    "generate:theme": "lerna run generate:theme",
    "ignore:rm": "lerna run ignore:rm",
    "lerna:ls:pl": "lerna ls -pl",
    "lint": "eslint '*/**/*.{js,ts,tsx}'",
    "list:releases": "lerna run list:releases",
    "ods:graduate": "yarn ods:release:prepare && yarn version:graduate",
    "ods:major": "yarn ods:release:prepare && yarn version:major",
    "ods:minor": "yarn ods:release:prepare && yarn version:minor",
    "ods:patch": "yarn ods:release:prepare && yarn version:patch",
    "ods:prepatch": "yarn ods:release:prepare && yarn version:prepatch",
    "ods:preminor": "yarn ods:release:prepare && yarn version:preminor",
    "ods:premajor": "yarn ods:release:prepare && yarn version:premajor",
    "ods:prerelease": "yarn ods:release:prepare && yarn version:prerelease",
    "ods:release:prepare": "npx zx scripts/ods-release-prepare.mjs",
    "publish": "lerna publish --concurrency 1 from-package --yes",
    "publish:only:force": "lerna publish --concurrency 1 from-package --ignore-prepublish --ignore-scripts --no-git-tag-version --no-push --yes",
    "start": "yarn workspace @ovhcloud/ods-dev-starter run start",
    "storybook": "yarn workspace @ovhcloud/ods-storybook run start:quiet",
    "storybook:notab": "yarn workspace @ovhcloud/ods-storybook run start:quiet --no-open",
    "test": "yarn run test:spec && yarn run test:e2e",
    "test:ci": "yarn run test:spec:ci && yarn run test:e2e:ci",
    "test:e2e": "lerna run --stream --concurrency 1 test:e2e",
    "test:e2e:ci": "lerna run --stream --concurrency 1 test:e2e:ci",
    "test:e2e:ci:screenshot": "lerna run --stream --concurrency 1 test:e2e:ci:screenshot",
    "test:e2e:ci:screenshot:update": "lerna run --stream --concurrency 1 test:e2e:ci:screenshot:update",
    "test:e2e:screenshot": "lerna run --stream --concurrency 1 test:e2e:screenshot",
    "test:e2e:screenshot:update": "lerna run --stream --concurrency 1 test:e2e:screenshot:update",
    "test:spec": "lerna run --stream --concurrency 1 test:spec",
    "test:spec:ci": "lerna run --stream --concurrency 1 test:spec:ci",
    "version": "yarn install && git add yarn.lock && echo \"more info, see: https://github.com/lerna/lerna/issues/2891#issuecomment-953823502\"",
    "version:graduate": "lerna version --conventional-commits --exact --force-publish --conventional-graduate",
    "version:graduate:nocommit": "lerna version --conventional-commits --exact --force-publish --conventional-graduate --no-commit-hooks --no-git-tag-version --no-push",
    "version:major": "lerna version major --conventional-commits --exact --force-publish",
    "version:minor": "lerna version minor --conventional-commits --exact --force-publish",
    "version:patch": "lerna version patch --conventional-commits --exact --force-publish",
    "version:prepatch": "lerna version prepatch --conventional-commits --exact --force-publish --conventional-prerelease",
    "version:preminor": "lerna version preminor --conventional-commits --exact --force-publish --conventional-prerelease",
    "version:premajor": "lerna version premajor --conventional-commits --exact --force-publish --conventional-prerelease",
    "version:prerelease": "lerna version --conventional-commits --exact --force-publish --conventional-prerelease",
    "version:prerelease:nocommit": "lerna version --conventional-commits --exact --conventional-prerelease --no-commit-hooks --no-git-tag-version --no-push"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@mermaid-js/mermaid-cli": "8.14.0",
    "@types/node": "15.14.9",
    "@typescript-eslint/eslint-plugin": "5.45.0",
    "@typescript-eslint/parser": "5.45.0",
    "btoa": "1.2.1",
    "conventional-changelog-angular": "5.0.13",
    "eslint": "7.32.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-tsdoc": "0.2.17",
    "fs-extra": "10.0.0",
    "generate-license-file": "2.0.0",
    "husky": "4.3.8",
    "lerna": "3.22.1",
    "node-fetch": "2.6.7",
    "ts-node": "10.7.0"
  },
  "engines": {
    "node": ">= 14.15 <16",
    "yarn": ">= 2.4.0"
  },
  "resolutions": {
    "@types/ws": "8.5.4"
  }
}
