{
  "extends": "./tsconfig.prod.json",
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "h",
    "declaration": true,
    "allowJs": true,
    "paths": {
      "@ovhcloud/ods-stencil/components/*": [
        "./packages/stencil/components/*"
      ]
    }
  },
  "include": [
    "accordion/src",
    "breadcrumb/src",
    "cart/src",
    "checkbox-button/src",
    "checkbox/src",
    "chip/src",
    "code/src",
    "content-addon/src",
    "divider/src",
    "flag/src",
    "input/src",
    "location-tile/src",
    "message/src",
    "pagination/src",
    "popover/src",
    "progress-bar/src",
    "quantity/src",
    "radio-button/src",
    "radio/src",
    "range/src",
    "select/src",
    "skeleton/src",
    "spinner/src",
    "src",
    "switch/src",
    "tabs/src",
    "tile/src",
    "toggle/src",
    "tooltip/src",
  ],
  "exclude": [
    "node_modules",
    "**/**/*.spec.ts",
    "**/**/*.spec.tsx",
    "**/**/*.e2e.ts",
    "**/**/*.e2e.screenshot.ts",
    "**/**/*.d.ts",
    "**/.stencil",
    "**/**/www.ts",
    "**/**/global.dev.ts",
    "**/**/global.test.ts",
    "**/**/www.components.ts",
    "**/**/dist",
    "react"
  ]
}
