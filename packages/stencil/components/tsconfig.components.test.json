{
  "extends": "./tsconfig.test.json",
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "h",
    "declaration": true,
    "paths": {
      "@ovhcloud/ods-stencil/components/*": [
        "./packages/stencil/components/*"
      ]
    }
  },
  "include": [
    "accordion/src",
    "code/src",
    "location-tile/src",
    "range/src",
    "src",
    "switch/src",
    "tabs/src",
  ],
  "exclude": [
    "node_modules",
    "**/**/*.spec.ts",
    "**/**/*.spec.tsx",
    "**/**/*.e2e.ts",
    "**/**/*.e2e.screenshot.ts",
    "**/**/*.d.ts",
    "**/.stencil",
    "**/**/www.ts",
    "**/**/global.prod.ts",
    "**/**/dist",
    "react"
  ]
}
