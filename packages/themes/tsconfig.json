{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["dom", "ESNext"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "removeComments": true,
    "strictNullChecks": true,
    "target": "ES6"
  },
  "include": ["src"],
  "exclude": ["node_modules/**/*"]
}
